

<form action="/login" method="post" class="form-horizontal login" role="form">
    <div class="form-group">
        <legend>Sign In</legend>
    </div>

    <div class="form-group">
        <label for="email" class="col-sm-2">Email</label>
        <div class="col-sm-10">
            <input type="text" name="username" class="form-control" id="email" value="admin">
        </div>
    </div>

    <div class="form-group">
        <label for="password" class="col-sm-2">Password</label>
        <div class="col-sm-10">
            <input type="password" name="password" class="form-control" id="password" value="admin">
        </div>
    </div>


    <div class="form-group">
        <div class="col-sm-10 col-sm-offset-2">
            <button type="submit" class="btn btn-primary">Sign In</button>
        </div>
    </div>
</form>